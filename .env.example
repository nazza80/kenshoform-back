# Django settings
DJANGO_DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key-in-production
SITE_URL=http://localhost

# Database settings
DJANGO_DB_DATABASE=wger
DJANGO_DB_USER=wger
DJANGO_DB_PASSWORD=wger

# Time zone
TIME_ZONE=Europe/Berlin

# Email settings (optional)
ENABLE_EMAIL=False
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password
# EMAIL_USE_TLS=True
# FROM_EMAIL=wger Workout Manager <wger@example.com>

# Application settings
ALLOW_REGISTRATION=True
ALLOW_GUEST_USERS=True
ALLOW_UPLOAD_VIDEOS=True
MIN_ACCOUNT_AGE_TO_TRUST=21
EXERCISE_CACHE_TTL=3600

# Sync on startup (set to True to populate database on first run)
SYNC_EXERCISES_ON_STARTUP=False
DOWNLOAD_EXERCISE_IMAGES_ON_STARTUP=False
DOWNLOAD_EXERCISE_VIDEOS_ON_STARTUP=False
LOAD_ONLINE_FIXTURES_ON_STARTUP=False
SYNC_INGREDIENTS_ON_STARTUP=False

# Celery settings (optional - for background tasks)
USE_CELERY=False
# CELERY_FLOWER_PASSWORD=change-this-password

# Security settings
AXES_ENABLED=True
AXES_FAILURE_LIMIT=10
AXES_COOLOFF_TIME=30

# CSRF trusted origins (add your domain)
CSRF_TRUSTED_ORIGINS=http://127.0.0.1,http://localhost

# Compression
COMPRESS_ENABLED=True

# Logging
LOG_LEVEL_PYTHON=INFO
